{
  "name": "portfolio",
  "version": "0.0.0",
  "license": "MIT",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "start": "npm run dev",
    "dev": "ng serve --target=development --hmr --open --sourcemaps",
    "prod-serve": "ng serve --target=production --open",
    "prod": "ng build --target=production --base-href=./ --aot=false",
    "publish": "ng build -prod --bh https://IPRIT.github.io/portfolio/ --aot=false && ngh --message 'Publish update'",
    "test": "ng test",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor",
    "i18n": "npm run i18n-ru",
    "i18n-ru": "ng xi18n -op ./src/locale -l ru -of messages.ru.xlf",
    "i18n-en": "ng xi18n -op ./src/locale -l en -of messages.en.xlf",
    "build-i18n:ru": "ng build --output-path=dist/ru --aot -prod --bh ./ru/ --i18n-file=src/locale/messages.ru.xlf --i18n-format=xlf --locale=ru",
    "build-i18n:en": "ng build --output-path=dist/en --aot -prod --bh ./en/ --i18n-file=src/locale/messages.en.xlf --i18n-format=xlf --locale=en",
    "publish-build-i18n:ru": "ng build --output-path=dist/ru --aot -prod --bh https://IPRIT.github.io/portfolio/ru/ --i18n-file=src/locale/messages.ru.xlf --i18n-format=xlf --locale=ru",
    "publish-build-i18n:en": "ng build --output-path=dist/en --aot -prod --bh https://IPRIT.github.io/portfolio/en/ --i18n-file=src/locale/messages.en.xlf --i18n-format=xlf --locale=en",
    "build-i18n": "npm run build-i18n:en && npm run build-i18n:ru",
    "publish-build-i18n": "ng build --target=production --aot=false --bh https://IPRIT.github.io/portfolio/ && npm run publish-build-i18n:en && npm run publish-build-i18n:ru && ngh --message 'Publish update'"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.0.1",
    "@angular/common": "^4.0.1",
    "@angular/compiler": "^4.0.1",
    "@angular/core": "^4.0.1",
    "@angular/flex-layout": "^2.0.0-beta.7",
    "@angular/forms": "^4.0.1",
    "@angular/http": "^4.0.1",
    "@angular/platform-browser": "^4.0.1",
    "@angular/platform-browser-dynamic": "^4.0.1",
    "@angular/platform-server": "^4.0.1",
    "@angular/router": "^4.0.1",
    "@ngtools/webpack": "^1.2.9",
    "angular-2-local-storage": "^1.0.1",
    "angularfire2": "^2.0.0-beta.8",
    "compass-mixins": "^0.12.10",
    "core-js": "^2.4.1",
    "firebase": "^3.7.5",
    "normalize.css": "^6.0.0",
    "rxjs": "^5.1.0",
    "swipejs": "^2.2.5",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "1.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angularclass/hmr": "^1.2.2",
    "@types/jasmine": "2.5.38",
    "@types/node": "^7.0.5",
    "codelyzer": "~2.0.0",
    "jasmine-core": "~2.5.2",
    "jasmine-spec-reporter": "~3.2.0",
    "karma": "~1.4.1",
    "karma-chrome-launcher": "~2.0.0",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.0",
    "ts-node": "^3.0.2",
    "tslint": "~4.5.0",
    "typescript": "~2.2.0"
  }
}
